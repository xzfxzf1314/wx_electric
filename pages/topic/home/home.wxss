.page {
  /* width: 750rpx; */
  height: 100%;
  background: white;
  margin-bottom: 20rpx;
}


.page .container {
  width: 750rpx;
  /* height: 100%; */
  overflow: hidden;
  background: white;
}

.container .subject_container {
  align-items: center;
  /* background: red; */
  width: 100%;
  padding: 10px;
  height: 40px;
  display: flex;
  justify-content: space-between;
}

.container .subject_container image {
  width: 20px;
  height: 20px;
}

.list {
  background: white;
  padding-top: 5px;
  display: flex;
  flex-direction: column;
}

.list .item {
  padding: 30rpx 0;
  border-bottom:0.5px solid #e0e0e07c;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin: auto;
  text-align: left;
  justify-content: center;
  width: 710rpx;
}

.list .item .sheet_textarea {
  height: 100%;
  background: white;
  border-radius: 5px;
  border-width: 0px;
  width: 100%;
  font-size: 35rpx;
  align-items: center;
}

